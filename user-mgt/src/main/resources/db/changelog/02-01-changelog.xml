<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1746153450887-1" author="Ahmed El-Seginy">
        <createTable tableName="role">
            <column name="id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_role"/>
            </column>
            <column name="title_en" type="VARCHAR(255)"/>
            <column name="created_on" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1746153450887-2" author="Ahmed El-Seginy">
        <createTable tableName="user">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user"/>
            </column>
            <column name="first_name" type="VARCHAR(255)"/>
            <column name="last_name" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="password" type="VARCHAR(255)"/>
            <column name="mobile_number" type="VARCHAR(255)"/>
            <column name="created_on" type="DATETIME"/>
            <column name="enabled" type="TINYINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1746153450887-3" author="Ahmed El-Seginy">
        <createTable tableName="user_role">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_role"/>
            </column>
            <column name="role_id" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_role"/>
            </column>
            <column name="created_on" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1746153450887-4" author="Ahmed El-Seginy">
        <addForeignKeyConstraint baseColumnNames="role_id" baseTableName="user_role"
                                 constraintName="FK_USER_ROLE_ON_ROLE" referencedColumnNames="id"
                                 referencedTableName="role"/>
    </changeSet>

</databaseChangeLog>